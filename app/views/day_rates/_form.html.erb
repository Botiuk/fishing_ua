<%= form_with(model: day_rate) do |form| %>
    <%= render 'shared/form_errors_messages', object: form.object %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-7">
                <%= form.label :water_bioresource_id, t('.water_bioresource'), style: "display: block" %>
                <%= select(:day_rate, :water_bioresource_id, options_for_select(@water_bioresources, :selected => form.object.water_bioresource_id), {:prompt => t('.prompt')}, {:class => "form-select"}) %>
            </div>

            <div class="col-md-7">
                <%= form.label :catch_amount, t('.catch_amount'), style: "display: block" %>
                <%= form.number_field :catch_amount, value: form.object.catch_amount || 0, min: 0, step: 0.1, class: "form-control" %>
            </div>

            <div class="col-md-4">
                <%= form.label :amount_type, t('.amount_type'), style: "display: block" %>
                <%= form.select :amount_type, DayRate.amount_types.keys.map{ |key| [DayRate.human_enum_name(:amount_type, key), key] }, {:prompt => t('.prompt'), :selected => form.object.amount_type}, {:class => "form-select"} %>
            </div>
        </div>

        <div class="row mt-2">
            <div>
                <%= form.button nil, class: "btn btn-success" do %>
                    <%= t('button.submit') %>
                <% end %>
            </div>
        </div>
    </div>

<% end %>