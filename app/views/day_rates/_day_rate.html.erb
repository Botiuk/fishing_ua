<tr id="<%= dom_id day_rate %>" class="text-center">
    <td style="width: 40%;">
        <%= link_to water_bioresource_path(day_rate.water_bioresource), class: "text-reset text-decoration-none" do %>
            <%= day_rate.water_bioresource.name %> (<%= day_rate.water_bioresource.latin_name %>)
        <% end %>
    </td>
    <td style="width: 30%;">
        <% if  day_rate.catch_amount == 0 %>
            -
        <% else %>
            <% if day_rate.catch_amount.to_i == day_rate.catch_amount %>
                <%= day_rate.catch_amount.to_i %>
            <% else %>
                <%= day_rate.catch_amount %>
            <% end %>
            <%= DayRate.human_enum_name(:amount_type, day_rate.amount_type) %>
        <% end %>        
    </td>
    <% if can? :update, CatchRate %>
        <td style="width: 15%;">
            <%= link_to t('button.edit'), edit_day_rate_path(day_rate), class: "btn btn-warning btn-sm" %>
        </td>
    <% end %>
    <% if can? :destroy, CatchRate %>
        <td style="width: 15%;">
            <%= button_to t('button.delete'), day_rate, method: :delete, data: { turbo_confirm: t('button.delete_confirm') }, class: "btn btn-danger btn-sm"%>
        </td>
    <% end %>
</tr>