<%= form_with(model: fishing_place) do |form| %>
    <%= render 'shared/form_errors_messages', object: form.object %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <%= form.label :name, t('.name'), style: "display: block" %>
                <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="col-md-4">
                <%= form.label :where_catch, t('.where_catch'), style: "display: block" %>
                <%= form.select :where_catch, FishingPlace.where_catches.keys.map{ |key| [FishingPlace.human_enum_name(:where_catch, key), key] }, {:prompt => t('.prompt'), :selected => form.object.where_catch}, {:class => "form-select"} %>
            </div>

            <div class="col-md-12">
                <%= form.label :description, t('.description'), style: "display: block" %>
                <%= form.text_area :description, size: "30x5", placeholder: t('.description-placeholder'), class: "form-control" %>
            </div>            
        </div>

        <div class="row mt-2">
            <div>
                <%= form.button nil, class: "btn btn-success" do %>
                    <%= t('button.submit') %>
                <% end %>
            </div>
        </div>
    </div>

<% end %>