<tr id="<%= dom_id rate_penalty %>" class="text-center">
    <td style="width: 50%;">
        <%= link_to water_bioresource_path(rate_penalty.water_bioresource), class: "text-reset text-decoration-none" do %>
            <%= rate_penalty.water_bioresource.name %> (<%= rate_penalty.water_bioresource.latin_name %>)
        <% end %>
    </td>
    <td style="width: 20%;"><%= rate_penalty.money %></td>
    <% if can? :update, RatePenalty %>
        <td style="width: 15%;">
            <%= link_to t('button.edit'), edit_rate_penalty_path(rate_penalty), class: "btn btn-warning btn-sm" %>
        </td>
    <% end %>
    <% if can? :destroy, RatePenalty %>
        <td style="width: 15%;">
            <%= button_to t('button.delete'), rate_penalty, method: :delete, data: { turbo_confirm: t('button.delete_confirm') }, class: "btn btn-danger btn-sm"%>
        </td>
    <% end %>
</tr>